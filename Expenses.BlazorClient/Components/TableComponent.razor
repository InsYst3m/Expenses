<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>@nameof(ExpenseViewModel.Name)</th>
            <th>@nameof(ExpenseViewModel.Comment)</th>
        </tr>
    </thead>
    @if (expenses == null)
    {
        <tr>No expenses found.</tr>
    }
    else
    {
        for (int i = 0; i < expenses.Length; i++)
        {
            <tbody>
                <tr>
                    <td scope="row">@i</td>
                    <td>@expenses[i].Name</td>
                    <td>@expenses[i].Comment</td>
                </tr>
            </tbody>
        }
    }
</table>

@code {
    [Parameter]
    public ExpenseViewModel[] expenses { get; set; }
}
